{
  "compilerOptions": {
    "composite": true,
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "outDir": "./dist/node"
  },
  "include": ["scripts/**/*.ts", "vite.config.ts"]
}
